enum CardStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Board {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String   @unique

  columns   Column[]
}

model Column {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     CardStatus

  board     Board @relation(fields: [boardId], references: [id])
  boardId   String

  cards     Card[]
}

model Card {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description  String
  column    Column @relation(fields: [columnId], references: [id])
  columnId  String @db.ObjectId
}
