{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib":[
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "baseUrl": "src",
    "paths": {
      "@apis/*": ["apis/*"],
      "@assets/*": ["assets/*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },
    /* Bundler mode */
    "allowJs":true,
    "skipLibCheck":true,
    "esModuleInterop":true,
    "allowSyntheticDefaultImports":true,
    "strict":true,
    "forceConsistentCasingInFileNames":true,
    "noFallthroughCasesInSwitch":true,
    "module":"esnext",
    "moduleResolution":"node",
    "resolveJsonModule":true,
    "isolatedModules":true,
    "noEmit":true,
    "jsx":"react-jsx"
  },
  "include":[
      "src"
    ]
}
